+  createGame(gameInfo) {
+    const baseGame = {
+      id: `${Date.now()}`,
+      ...gameInfo,
+      attendance: gameInfo.attendance || [],
+      goals: [],
+      penalties: [],
+      homeScore: 0,
+      awayScore: 0,
+      status: 'in_progress',
+      created: new Date().toISOString(),
+    };
+
+    if (!baseGame.division) {
+      baseGame.division = this.resolveDivisionForGame(baseGame);
